<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="/img/logo.svg">
        {% block stylesheets %}
        
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
        
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
        {# <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script> #}
        <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.14.0/css/all.css" integrity="sha384-HzLeBuhoNPvSl5KYnjx0BT+WB0QEEqLprO+NBkkk5gbc67FTaL7XIGa2w1L0Xbgc" crossorigin="anonymous"><!-- fontawesom cdn link -->

        {% endblock %}

        {% block javascripts %}{% endblock %}

        <style>
            .maintenance-backdrop {
                position: fixed;
                top: 0;
                left: 0;
                width: 100vw;
                height: 100vh;
                background-color: rgba(0, 0, 0, 0.7);
                z-index: 1050; /* Au-dessus de la plupart des éléments */
            }
            .maintenance-modal {
                position: fixed;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                z-index: 1051;
                background: white;
                padding: 40px;
                border-radius: 8px;
                text-align: center;
                box-shadow: 0 5px 15px rgba(0,0,0,0.3);
                min-width: 320px;
            }
            .maintenance-close-btn {
                position: absolute;
                top: 10px;
                right: 15px;
                font-size: 1.5rem;
                font-weight: bold;
                color: #888;
                background: none;
                border: none;
                cursor: pointer;
            }
        </style>
    </head>
    <body>
        {% set current_path = app.request.pathinfo %}
        {% set path_parts = current_path|trim('/')|split('/') %}
        {% set current_category = path_parts|first %}

        {% if current_category and maintenance.isCategoryActive(current_category) %}
            <div id="maintenance-container">
                <div class="maintenance-backdrop"></div>
                <div class="maintenance-modal">
                    {% if is_granted('ROLE_ADMIN') %}
                        <button class="maintenance-close-btn" onclick="document.getElementById('maintenance-container').style.display='none'">&times;</button>
                    {% endif %}

                    <i class="fas fa-tools fa-3x text-warning mb-3"></i>
                    <h2 class="h4">Section en Maintenance</h2>
                    <p class="text-muted">
                        {# Affiche le message personnalisé ou le message par défaut #}
                        {{ maintenance.getMessageForCategory(current_category)|raw }}
                    </p>
                    {% if is_granted('ROLE_ADMIN') %}
                        <small class="d-block mt-3 text-info">Vous pouvez fermer cette fenêtre car vous êtes administrateur.</small>
                    {% endif %}
                </div>
            </div>
        {% endif %}

        {% include 'navbar.html.twig' %}

        <div class="d-flex">
            <!-- Sidebar incluse ici -->
            {% block sidebar %}
            {% endblock %}
            
            <!-- Contenu principal -->
            <div class="flex-grow-1 ">
                {% block body %}
                    <h1>Welcome to Symfony!</h1>
                {% endblock %}
            </div>
        </div>
    </body>
</html>

{% extends 'base.html.twig' %} 
{% block title %}Accueil{% endblock %}

{% block body %}

<style>
    .bg-vin {
        background-color: #800000; /* Couleur vin */
    }
    .text-white {
        color: white; /* Couleur du texte en blanc */
    }
</style>

<nav class="navbar navbar-expand-lg bg-vin">
    <a class="navbar-brand text-white ms-2" href="#"><h2>Chateau Latour</h2></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
            <a class="nav-item nav-link text-white" href="#" aria-current="page">Accueil</a>
            <a class="nav-item nav-link text-white" href="/generateurSignature">Générateur de signature</a>
            <a class="nav-item nav-link text-white" href="#">Formulaire</a>
            <a class="nav-item nav-link text-white" href="#">Portail applicatif</a>
        </div>
        <div class="ms-auto"> 
            {% if app.user %}
                <a class="nav-item nav-link text-white">{{ app.user.userIdentifier }}</a>
                <span class="text-white">
                    <button class="btn btn-primary me-2" onclick="window.location.href='/profil'">Mon profil</button>
                    <button class="btn btn-danger me-2" onclick="window.location.href='/logout'">Deconnexion</button>
                </span>
            {% else %}
                <span class="text-white">
                    <button class="btn btn-success me-2" onclick="window.location.href='/login'">Connexion</button>
                </span>
            {% endif %}
        </div>
    </div>
</nav>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="/img/batiment.jpg" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="/img/chai.jpg" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="/img/GV2000.jpg" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

{% endblock %}

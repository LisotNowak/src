<div class="d-flex flex-column flex-shrink-0 p-3 bg-light position-sticky" style="width: 250px; height: 100vh; top: 0;">
    <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
        <span class="fs-4">Dotation vestimentaire :</span>
    </a>
    <hr>

    {# Affichage utilisateur + select admin uniquement sur la page catalogue #}
    {% if active_link == 'catalogue' %}
      <div class="mb-3">
        <small class="text-muted">Connecté en tant :</small><br>
        <strong>{{ currentUser ? currentUser.email : 'Invité' }}</strong>
        <div class="small text-muted">Points : {{ currentUser ? currentUser.pointDotation : 0 }} P</div>
        {% if is_granted('ROLE_ADMIN') %}
          <div class="mt-2">
            <small class="text-muted">Commander pour :</small>
            <select id="targetUserSelect" class="form-control form-control-sm">
              <option value="">-- Moi-même --</option>
              {% for u in listeUsers %}
                <option value="{{ u.id }}">{{ u.email }}</option>
              {% endfor %}
            </select>
          </div>
        {% endif %}
      </div>
      <hr>
    {% endif %}
    <ul class="nav nav-pills flex-column mb-auto">
        <li class="nav-item">
            <a href="/dota" class="nav-link {% if active_link == 'catalogue' %}active{% else %} link-dark {% endif %}" aria-current="page">
                <i class="fas fa-th-list me-2" aria-hidden="true"></i> Catalogue
            </a>
        </li>
        <li>
            <a href="/dota/stock" class="nav-link {% if active_link == 'stock' %}active{% else %} link-dark {% endif %}">
                <i class="fas fa-warehouse me-2" aria-hidden="true"></i> Stock
            </a>
        </li>
        <li class="nav-item">
            <a href="{{ path('app_mes_commandes_dota') }}" class="nav-link {% if active_link == 'mes_commandes' %}active{% else %} link-dark {% endif %}">
                <i class="fas fa-box me-2" aria-hidden="true"></i> Mes commandes
            </a>
        </li>

        <li class="nav-item">
            <a href="{{ path('app_gestion_commandes_dota') }}" class="nav-link {% if active_link == 'gestion_commandes' %}active{% else %} link-dark {% endif %}">
                <i class="fas fa-box me-2" aria-hidden="true"></i> Gestion des commandes
            </a>
        </li>
                <li>
            <a href="/dota/admin" class="nav-link {% if active_link == 'admin' %}active{% else %} link-dark {% endif %}">
                <i class="fas fa-cogs me-2" aria-hidden="true"></i> Administration
            </a>
        </li>
                <li>
            <a href="/dota/point" class="nav-link {% if active_link == 'GestionPoint' %}active{% else %} link-dark {% endif %}">
                <i class="fa fa-coins me-2" aria-hidden="true"></i> Gestion des points
            </a>
        </li>
    </ul>
    <hr>
</div>

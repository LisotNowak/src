{% extends 'base.html.twig' %} 
{% block title %}{{ product.nom }}{% endblock %}


{% block sidebar %}
    {% include 'dotation/sidebar.html.twig' with {'active_link': 'null'} %}
{% endblock %}


{% block body %}



<div class="container mt-4" id="top-logo">
    <div class="row">
        <div class="col-md-2" style="right: 5%;">
            <!-- Just an image -->

        </div>
        <div class="col-md-7" id="searchbar">
            
        </div>
        <div class="col-md-3 mt-2" id="icons">
          
         <a href="/dota/panier"> <div class="circle float-right mr-2"><i class="fas fa-shopping-cart text-primary"></i><sup><span class="badge badge-danger" style="width: 23px;">{% if nombreArticles is defined %}{{nombreArticles}}{% else %}0{% endif %}</span></sup></div>
         </a>
        </div>
    </div>
</div>

<hr>


<div class="container mt-5 mb-5" id="productPage">
    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <img src="https://bootstrap-ecommerce.com/bootstrap-ecommerce-html/images/items/1.jpg" class="figure-img img-fluid rounded">
            </div>
        </div>

        <div class="col-md-7">
            <h5>{{ product.nom }}</h5>
            <p class="text-muted">Type ???</p>

            <h5 class="pt-4">{{ product.prix }} €</h5>
            <p class="description text-muted">{{ product.description }}</p>
            <hr>
            <table class="table mt-2">
                <tbody>
                    <tr>
                        <th scope="row">Reference :</th>
                        <td>{{ product.reference }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Couleur</th>
                        <td>?????</td>
                    </tr>
                </tbody>
            </table>
            <hr>

            <!-- Formulaire d'ajout au panier -->
            <div class="mt-3" id="purchase-btn">
                <form method="POST" action="{{ path('add_to_cart') }}"> <!-- Remplacez 'add_to_cart' par votre route -->
                    <input type="hidden" name="product_id" value="{{ product.id }}"> <!-- ID du produit -->

                    <!-- Quantité -->
                    <div class="row">
                        <div class="col-md-3">
                            <div class="input-group mb-3">
                                <input type="number" name="quantity" class="numberbox1 form-control" value="1" min="1" required>
                            </div>
                        </div>
                    </div>

                    <!-- Taille -->
                    <div class="row">
                        <div class="col-md-5">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="size" id="inlineRadio1" value="S" required>
                                <label class="form-check-label" for="inlineRadio1">S</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="size" id="inlineRadio2" value="M">
                                <label class="form-check-label" for="inlineRadio2">M</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="size" id="inlineRadio3" value="L">
                                <label class="form-check-label" for="inlineRadio3">L</label>
                            </div>
                        </div>
                    </div>

                    <!-- Bouton -->
                    <button type="submit" class="btn btn-sm btn-light mt-3">
                        <i class="fas fa-shopping-cart pr-2"></i> Ajouter au panier
                    </button>
                </form>


                <div class="container">
                  <ul class="nav nav-tabs mt-5" id="myTab" role="tablist">
                    <li class="nav-item">
                      <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">DESCRIPTION</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">INFORMATION</a>
                    </li>
                  </ul>
                  <div class="tab-content w-100 pt-5" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                      <h5>Déscription de produit : {{ product.nom }}</h5>
                      <h5 class="pt-4">{{ product.prix }} €</h5>
                      <p class="description text-muted">{{ product.description }}</div>
                    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                      <h5>Informations techniques</h5>
                      <br>
                      <table class="table table-striped table-bordered">
                        <thead>
                          <tr>
                            <th scope="row">Matière</th>
                            <td><i>????</i> </td>
                          </tr>
                        </thead>
                    
                        <tbody>
                          <tr>
                            <th scope="row">Dimensions</th>
                            <td><i>?? × ?? cm</i></td>
                          </tr>
                        
                        </tbody>
                      </table>
                    </div>
                  </div>
                  
                  
                  <br>
                  <br>
                  <br>
                </div>
            </div>
        </div>
    </div>
</div>

  
</body>


<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="{{ asset('css/signature.css') }}" rel="stylesheet">
    <title>Copier Signature</title>
    <style>
        .content {
            border: 1px solid #ccc;
            padding: 10px;
            margin: 20px 0;
            background-color: #f9f9f9;
        }
        .flex-container {
            display: flex;
            align-items: center;
            flex-wrap: nowrap;
        }
        .contact-info {
            white-space: nowrap;
        }
        td {
            padding: 2px 0; /* Réduit l'espace vertical entre les lignes */
        }
        .left-column {
            padding-right: 5px; /* Ajuste l'espace entre les colonnes */
        }
    </style>
</head>
<body>

<button id="copyButton">Copier la signature</button>

<div class="content" id="contentToCopy">
    <table cellpadding="0" cellspacing="0" border="0" style="width: 100%; background: none; border: 0; margin: 0; padding: 0; line-height: 20px;">
        <tr>
            <td class="left-column" valign="top" style="vertical-align: top;">
                <table cellpadding="0" cellspacing="0" border="0" style="background: none; border: 0; margin: 0; padding: 0;">
                    <tr>
                        <td colspan="2" style="padding-bottom: 5px; color: #333; font-size: 20px; font-weight: bold; font-family: calibri, Arial, Helvetica, sans-serif;">
                            Prenom NOM
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" style="padding-bottom: 5px; color: #333; font-size: 17px; font-family: calibri, Arial, Helvetica, sans-serif;">
                            Métier / fonction
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" style="padding-bottom: 5px; color: #333; font-size: 18px; font-family: calibri, Arial, Helvetica, sans-serif;">
                            Chateau Latour
                        </td>
                    </tr>
                    <tr>
                        <td valign="top" style="color: #333; font-size: 14px; font-family: calibri, Arial, Helvetica, sans-serif;">
                            <span>Saint-Lambert - 33250 Pauillac - France</span>
                        </td>
                    </tr>
                    <tr>
                        <td valign="top" style="color: #28a09c; font-size: 14px; font-family: calibri, Arial, Helvetica, sans-serif;">
                            <div class="flex-container">
                                <img src="https://image.ibb.co/dxDQTG/icon_phone.png" style="margin-right: 5px;">
                                <span>06 28 01 88 34</span>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td valign="top" style="color: #28a09c; font-size: 14px; font-family: calibri, Arial, Helvetica, sans-serif;">
                            <div class="flex-container contact-info">
                                <img src="https://image.ibb.co/bEvpoG/icon_mail.png" style="margin-right: 5px;">
                                <a href="mailto:hail@cucu.com" style="white-space: nowrap;">
                                    prenom.nom@artemis-domaines.com
                                </a>
                            </div>
                        </td>
                    </tr>
                </table>
            </td>
            <td valign="top" style="padding: 0; border-left: solid 2px #28a09c; vertical-align: middle;">
                <img src="/img/latour.jpg" height="150" width="250">
            </td>
        </tr>
    </table>
</div>

<script>
    document.getElementById('copyButton').addEventListener('click', function() {
        const content = document.getElementById('contentToCopy');
        const range = document.createRange();
        range.selectNode(content);
        window.getSelection().removeAllRanges(); // Effacer toute sélection précédente
        window.getSelection().addRange(range); // Sélectionner le contenu

        try {
            const successful = document.execCommand('copy');
            const msg = successful ? 'Signature copiée avec succès!' : 'Échec de la copie.';
            console.log(msg);
        } catch (err) {
            console.error('Erreur lors de la copie : ', err);
        }

        // Désélectionner le texte
        window.getSelection().removeAllRanges();
    });
</script>

</body>
</html>

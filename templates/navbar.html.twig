                    </ul>
                </li> #}
                {% endif %}
            </div>
            <div class="ms-auto d-flex align-items-center"> 
                {% if app.user %}
                    <a class="nav-item nav-link text-white me-2">{{ app.user.userIdentifier }}</a>
                    <span class="text-white">
                        <button class="btn btn-primary me-2" onclick="window.location.href='/profil'">Mon profil</button>
                        <button class="btn btn-danger me-2" onclick="window.location.href='/logout'">Déconnexion</button>
                    </span>
                {% else %}
                    <span class="text-white">
                        <button class="btn btn-success me-2" onclick="window.location.href='/login'">Connexion</button>
                    </span>
                {% endif %}
            </div>
        </div>
    </div>

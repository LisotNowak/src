<html>
    <head>
        <meta charset="UTF-8">
        <title>Connexion</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="{{ asset('css/login.css') }}">
        {% endblock %}

        {# {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %} #}
    </head>

{% block body %}
<div class="container vh-100 d-flex align-items-center justify-content-center">
    <div class="card shadow-sm w-100" style="max-width:920px;">
        <div class="row g-0">
            <!-- Formulaire centré -->
            <div class="col-md-7 p-4 d-flex align-items-center">
                <div class="w-100">
                    <form method="post" class="mx-auto" style="max-width:420px;">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        {% if app.user %}
                            <div class="mb-3">
                                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                            </div>
                        {% endif %}
                        <div class="text-center mb-4">
                            <img src="{{ asset('img/artemis_domaines.jpg') }}" alt="" class="img-fluid" style="max-height:80px;">
                        </div>
                        <h1 class="h4 mb-3 text-center">Connexion</h1>

                        <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control mb-3" autocomplete="email" placeholder="Email" required autofocus>
                        <input type="password" name="_password" id="password" class="form-control mb-3" autocomplete="current-password" placeholder="Mot de passe" required>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="d-grid">
                            <button class="btn btn-primary btn-lg" type="submit">Connexion</button>
                        </div>

                        <div class="text-center mt-3">
                            <a href="/" class="btn btn-link">← Retour à l'accueil</a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Bouton Microsoft à droite -->
            <div class="col-md-5 d-flex align-items-center justify-content-center p-4">
                <div class="text-center">
                    <div class="mb-3"><strong>Connexion externe</strong></div>
                    <a href="{{ path('connect_microsoft_start') }}" class="btn btn-light d-flex align-items-center justify-content-center" role="button" rel="noopener" style="min-width:200px;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 46 46" aria-hidden="true" focusable="false" class="me-2">
                            <rect width="20" height="20" x="2" y="2" fill="#F35325"/>
                            <rect width="20" height="20" x="24" y="2" fill="#81BC06"/>
                            <rect width="20" height="20" x="2" y="24" fill="#05A6F0"/>
                            <rect width="20" height="20" x="24" y="24" fill="#FFBA08"/>
                        </svg>
                        <span>Se connecter avec Microsoft</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
</html>


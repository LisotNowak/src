{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

<div class="text-center">
    {{ form_start(registrationForm, { 'method': 'POST', 'attr': { 'class': 'form-signin' } }) }}

    {% if form_errors(registrationForm) %}
        <div class="alert alert-danger">
            {{ form_errors(registrationForm) }}
        </div>
    {% endif %}

    <img class="mb-4" src="img/latour.jpg" alt="">
    <h1 class="h3 mb-3 font-weight-normal">Inscription</h1>

    {{ form_row(registrationForm.email, {
        'attr': { 'class': 'form-control', 'placeholder': 'Email', 'autocomplete': 'email', 'required': true },
        'label': false
    }) }}

    {{ form_row(registrationForm.plainPassword, {
        'label': 'Mot de passe',
        'attr': { 'class': 'form-control mt-3', 'placeholder': 'Mot de passe', 'autocomplete': 'new-password', 'required': true },
        'label': false
    }) }}

    {{ form_row(registrationForm.agreeTerms, {
        'attr': { 'class': 'form-check-input' },
        'label': false
    }) }}
    <label for="{{ registrationForm.agreeTerms.vars.id }}" class="form-check-label">
        J'accepte les termes et conditions
    </label>

    <button class="btn btn-lg btn-primary mt-4" type="submit">S'inscrire</button>

    {{ form_end(registrationForm) }}
    <button class="btn btn btn-secondary mt-3" onclick="window.location.href='/login'">Connexion</button>
</div>

{% endblock %}

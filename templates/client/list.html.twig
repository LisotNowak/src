{% extends 'base.html.twig' %}

{% block title %}Liste des clients{% endblock %}

{% block body %}
<div class="mt-4">
    <div class="container mt-4">
        <h2 class="mb-4">Liste des clients</h2>
        <form method="get" class="mb-4">
            <div class="row g-2 align-items-center">
                <div class="col-auto">
                    <label for="signataire" class="col-form-label fw-bold">Choisir un signataire :</label>
                </div>
                <div class="col-auto">
                    <select id="signataire" name="signataire" class="form-select" onchange="this.form.submit()">
                        <option value="">-- Tous les signataires --</option>
                        {% for signataire in signataires %}
                            <option value="{{ signataire.id }}" {% if signataire_selected == signataire.id %}selected{% endif %}>
                                {{ signataire.nom }}
                            </option>
                        {% else %}
                            <option disabled>Aucun signataire trouvé.</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="col-auto">
                    <label for="categorie" class="col-form-label fw-bold">Choisir une catégorie :</label>
                </div>
                <div class="col-auto">
                    <select id="categorie" name="categorie" class="form-select" onchange="this.form.submit()">
                        <option value="">-- Toutes les catégories --</option>
                        {% for cat in categories %}
                            <option value="{{ cat.id }}" {% if categorie_selected == cat.id %}selected{% endif %}>
                                {{ cat.nomCategorie }}
                            </option>
                        {% else %}
                            <option disabled>Aucune catégorie trouvée.</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        </form>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Ville</th>
                    <th>Pays</th>
                    <th>Société</th>
                    <th>Catégorie</th> 
                    <th>Conserver</th>
                    <th>Signature Manuscrite</th>
                    <th>Envoi mail</th>
                </tr>
            </thead>
            <tbody>
                {% if signataire_selected %}
                    {% for client in clients %}
                        {% set clientAssocs = associations[client.id] ?? [] %}
                        {% set assoc = clientAssocs|first %}
                        <tr>
                            <td>{{ client.triNom }}</td>
                            <td>{{ client.triPrenom }}</td>
                            <td>{{ client.ville }}</td>
                            <td>{{ client.pays }}</td>
                            <td>{{ client.societeNom }}</td>
                            <td>{{ client.categorieEntity ? client.categorieEntity.nomCategorie : 'Aucune' }}</td>

                            <td>
                                <select name="conserver_{{ client.id }}" class="form-select form-select-sm conserver-select"
                                    data-client-id="{{ client.id }}"
                                    data-signataire="{{ assoc ? assoc.signataire.id : '' }}">
                                    <option value="1" {% if assoc and assoc.conserver %}selected{% endif %}>Oui</option>
                                    <option value="0" {% if assoc and not assoc.conserver %}selected{% endif %}>Non</option>
                                </select>
                            </td>

                            <td>
                                <select name="signature_{{ client.id }}" class="form-select form-select-sm signature-select"
                                    data-client-id="{{ client.id }}"
                                    data-signataire="{{ assoc ? assoc.signataire.id : '' }}">
                                    <option value="1" {% if assoc and assoc.signature %}selected{% endif %}>Oui</option>
                                    <option value="0" {% if assoc and not assoc.signature %}selected{% endif %}>Non</option>
                                </select>
                            </td>

                            <td>
                                <select name="envoi_mail_{{ client.id }}" class="form-select form-select-sm envoi-mail-select"
                                    data-client-id="{{ client.id }}"
                                    data-signataire="{{ assoc ? assoc.signataire.id : '' }}">
                                    <option value="1" {% if assoc and assoc.envoiMail %}selected{% endif %}>Oui</option>
                                    <option value="0" {% if assoc and not assoc.envoiMail %}selected{% endif %}>Non</option>
                                </select>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="9" class="text-center text-muted">Aucun client trouvé pour ce signataire.</td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="9" class="text-center text-muted">Veuillez sélectionner un signataire pour afficher les clients.</td>
                    </tr>
                {% endif %}
            </tbody>

        </table>
    </div>
</div>

{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    document.querySelectorAll('.signature-select, .conserver-select, .envoi-mail-select').forEach(function(select) {
        select.addEventListener('change', function() {
            const clientId = this.dataset.clientId;
            let field = 'signature';
            if (this.classList.contains('conserver-select')) field = 'conserver';
            if (this.classList.contains('envoi-mail-select')) field = 'envoiMail';
            const value = this.value;
            const signataire = this.dataset.signataire;
            fetch("{{ path('app_clients_update_field') }}", {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest',
                    'X-CSRF-TOKEN': '{{ csrf_token('update_client_field') }}'
                },
                body: JSON.stringify({ id: clientId, signataire: signataire, field: field, value: value })
            })
            .then(response => response.json())
            .then(data => {
                if (!data.success) {
                    alert('Erreur lors de la sauvegarde');
                }
            })
            .catch(() => alert('Erreur lors de la sauvegarde'));
        });
    });
});
</script>
{% endblock %}
{% endblock %}

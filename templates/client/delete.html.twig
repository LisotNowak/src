{% extends 'base.html.twig' %}

{% block title %}Supprimer des clients{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2 class="mb-4 text-danger">Supprimer des clients</h2>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <a href="{{ path('app_clients_list') }}" class="btn btn-secondary">‚¨ÖÔ∏è Retour √† la liste</a>

        <!-- Barre de recherche -->
        <div class="w-50">
            <input type="text" id="searchInput" class="form-control" placeholder="üîç Rechercher un client (nom, pr√©nom, ville, soci√©t√©...)">
        </div>
    </div>

    {% if clients is not empty %}
        <table id="clientsTable" class="table table-bordered table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Nom</th>
                    <th>Pr√©nom</th>
                    <th>Ville</th>
                    <th>Pays</th>
                    <th>Soci√©t√©</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for client in clients %}
                    <tr>
                        <td>{{ loop.index }}</td>
                        <td>{{ client.triNom }}</td>
                        <td>{{ client.triPrenom }}</td>
                        <td>{{ client.ville }}</td>
                        <td>{{ client.pays }}</td>
                        <td>{{ client.societeNom }}</td>
                        <td>
                            <form method="post" 
                                  action="{{ path('app_client_delete', {id: client.id}) }}" 
                                  onsubmit="return confirm('Voulez-vous vraiment supprimer {{ client.triPrenom }} {{ client.triNom }} ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete_client_' ~ client.id) }}">
                                <button class="btn btn-sm btn-danger">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div class="alert alert-info">Aucun client trouv√©.</div>
    {% endif %}
</div>

<style>
#searchInput {
    border-radius: 10px;
    padding: 8px 12px;
    font-size: 16px;
}

#clientsTable tbody tr {
    transition: all 0.2s ease-in-out;
}

#clientsTable tbody tr:hover {
    background-color: #f8f9fa;
}
</style>

{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
// --- Recherche dynamique ---
document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('searchInput');
    const tableRows = document.querySelectorAll('#clientsTable tbody tr');

    searchInput.addEventListener('keyup', function() {
        const searchText = this.value.toLowerCase().trim();

        tableRows.forEach(row => {
            const text = row.textContent.toLowerCase();
            if (text.includes(searchText)) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    });
});
</script>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Mon Profil</h1>

    <div class="card p-4 shadow-sm">
        <h4>Informations personnelles</h4>
        <ul class="list-unstyled">
            <li><strong>Nom :</strong> {{ user.nom }}</li>
            <li><strong>Prénom :</strong> {{ user.prenom }}</li>
            <li><strong>Email :</strong> {{ user.email }}</li>
            <li><strong>Rôles :</strong> {{ user.roles|join(', ') }}</li>
            {# <li><strong>Points (Dotation vestimentaire) :</strong> {{ user.pointDotation ?? 0 }}</li> #}

            {% if user.dateDebutContrat %}
                <li><strong>Début du contrat :</strong> {{ user.dateDebutContrat|date('d/m/Y') }}</li>
            {% endif %}
            {% if user.dateFinContrat %}
                <li><strong>Fin du contrat :</strong> {{ user.dateFinContrat|date('d/m/Y') }}</li>
            {% endif %}
        </ul>
    </div>
</div>
{% endblock %}
